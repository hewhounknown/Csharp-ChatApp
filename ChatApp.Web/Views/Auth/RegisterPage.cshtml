@{
}

<div class="row justify-content-center">
    <form method="POST" action="" class="card col-sm-6 m-5 p-3">

        <!-- Name -->
        <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input id="name" class="form-control" type="text" name="name" value="" required/>
        </div>

        <!-- Email Address -->
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input id="email" class="form-control" type="email" name="email" value="" required/>
        </div>

        <!-- Phone -->
        <div class="mb-3">
            <label for="phone" class="form-label">Phone:</label>
            <input id="phone" class="form-control" type="text" name="phone" value=""
                   required autocomplete="userphone" />
        </div>

        <!-- Password -->
        <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <input id="password" class="form-control" type="password" name="password" required/>
        </div>

        <!-- Confirm Password -->
        <div class="mb-3">
            <label for="password_confirmation" class="form-label">Confirm Password:</label>
            <input id="password_confirmation" class="form-control" type="password" name="password_confirmation" required />
        </div>

        <div class="d-flex justify-content-end mt-4">
            <a class="underline text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 rounded-md focus:outline-none
                        focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-offset-gray-800"
               href="/Auth/LoginPage">
                Already registered?
            </a>

            <button type="submit" class="btn btn-primary ms-4">Register</button>
        </div>
    </form>
</div>
