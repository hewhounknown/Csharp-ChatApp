@model RegisterRequest;
@{
    ViewData["Title"] = "Register";

    MessageResponse msg = null;
    if(TempData["Message"] != null)
    {
        var json = TempData["Message"].ToString();
        msg = JsonConvert.DeserializeObject<MessageResponse>(json);
    }
}

<div class="row justify-content-center">
    <form method="POST" asp-action="Register" class="card col-sm-6 m-5 p-3">

        <!-- Name -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name:</label>
            <input asp-for="Name" class="form-control" type="text" required/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Email Address -->
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email:</label>
            <input asp-for="Email" class="form-control" type="email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Phone -->
        <div class="mb-3">
            <label asp-for="Phone" class="form-label">Phone:</label>
            <input asp-for="Phone" class="form-control" type="text" required />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

       <!-- Gender -->
        <div class="mb-3">
            <label asp-for="Gender" class="form-label">Gender:</label>
            <select asp-for="Gender" class="form-select" aria-label="Default select example">
                <option value="Male" selected>Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <!-- DoB -->
        <div class="mb-3">
            <label asp-for="DoB" class="form-label">Date Of Birth:</label>
            <input asp-for="DoB" class="form-control" type="date" required />
            <span asp-validation-for="DoB" class="text-danger"></span>
        </div>

        <!-- Password -->
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password:</label>
            <input asp-for="Password" class="form-control" type="password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!-- Confirm Password -->
        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password:</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <a href="/Auth/Login"> Already registered? <a>
            <button type="submit" class="btn btn-primary ms-4">Register</button>
        </div>
    </form>
</div>

@section Scripts{
  @if(msg != null){
    <script>
            Swal.fire({
                title: 'Try Again!',
                text: '@msg.Message',
                icon: 'warning',
                confirmButtonText: 'Ok'
            })
    </script>
  }
}
